<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-4.0.xsd  
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- This will automatically declare several post-processors
    including the AutowiredAnnotationBeanPostProcessor -->    
    <!-- This context is loaded by type and not by name -->
    <bean class="org.springframework.context.support.ClassPathXmlApplicationContext">
        <constructor-arg value="classpath*:service-applicationContext.xml" /> 
    </bean>

</beans>